{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 19,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "mingw-build",
        "displayName": "MinGW Build",
        "description": "Build with MinGW i686-w64-mingw32-gcc",
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "i686-w64-mingw32-gcc",
          "CMAKE_SYSTEM_NAME": "Windows"
        }
      }
    ]
  }
  